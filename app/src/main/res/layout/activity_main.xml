<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bodor.com.elegantnumberbutton.MainActivity">

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:initialNumber="10"
        app:finalNumber="100"
        app:backGroundColor="@android:color/holo_blue_dark"
        app:theme="@style/Animation.AppCompat.Dialog"
        app:backgroundDrawable="@mipmap/ic_launcher"
        app:textColor="@android:color/holo_orange_dark"
        app:textSize="20sp"
       />

</RelativeLayout>
